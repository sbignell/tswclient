block forgot
  div.row
    div.col-sm-6
      div.page-header
        h1 Forgot Your Password?
      div#forgotForm
        form
          div.form-group
            label Enter Your Email:
            input#forgotEmail.form-control(type='text', name='email')
          div.form-group
            button#doForgot.btn.btn-primary.btn-forgot(type='button') Send Reset 
          div#forgotErrors.form-group     